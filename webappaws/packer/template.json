{
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "us-west-1",
        "source_ami": "ami-0c55b159cbfafe1f0", 
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "webapp-ami-{{timestamp}}",
        "ami_description": "AMI with web application pre-installed",
        "associate_public_ip_address": true,
        "ssh_keypair_name": "your-ssh-keypair",
        "ssh_private_key_file": "~/.ssh/your-private-key.pem",
        "ami_virtualization_type": "hvm",
        "launch_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_size": 20,
            "volume_type": "gp2",
            "delete_on_termination": true
          }
        ]
      }
    ],
    "provisioners": [
      {
        "type": "ansible",
        "playbook_file": "playbook.yml",
        "extra_arguments": [ "--extra-vars", "env=production" ]
      }
    ]
  }
  